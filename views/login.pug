doctype
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SAUCE login

    link(
      rel='stylesheet',
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css',
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3',
      crossorigin='anonymous'
    )
  body
    .container-fluid.p-4(style='max-width: 768px')
      .row
        //- .col
        .col-md-8
          h1.mb-4 Log into SAUCE
          p
            | Use your SCCS account to log in, not your Swarthmore ITS account.
            | Don't have a SCCS account? #[a(href='/account/create') Create&nbsp;one].
          form.form-signin(action='/login/', method='post')
            .form-group.mb-3
              .form-floating
                input#usernameInput.form-control(
                  type='text',
                  name='username',
                  placeholder='Username'
                )
                label(for='usernameInput') Username

            .form-group.mb-3
              .form-floating
                input#passwordInput.form-control(
                  type='password',
                  name='password',
                  placeholder='Password'
                )
                label(for='passwordInput') Password

            button.btn.btn-large.btn-primary.mb-3(type='submit') Sign in
            p
              small#usernameHelp.text-muted
                a(href='/find-username') Forgot username?
            p
              small#passwordHelp.text-muted
                a(href='/reset-password') Forgot password?
        .col
    script(
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js',
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p',
      crossorigin='anonymous'
    )
