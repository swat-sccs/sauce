doctype
html(lang='en')
  head
    meta(charset='utf-8')
    title SAUCE login
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
  body
    .container(style={margin: '1rem'})
      form.form-signin(action="/login/" method="post")
        .form-group
          label(for="usernameInput") Username
          input.form-control#usernameInput(type='text' name='username' aria-describedby="usernameHelp")
          small.form-text.text-muted#usernameHelp This is your SCCS account, not your Swarthmore account.
        .form-group
          label(for="passwordInput") Password
          input.form-control#passwordInput(type='password' name='password')
        button.btn.btn-large.btn-primary(type='submit') Sign in